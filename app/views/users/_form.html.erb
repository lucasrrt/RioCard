<%= form_for(user) do |f| %>
	<% if user.errors.any? %>
		<div id="error_explanation">
			<h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

			<ul>
				<% user.errors.full_messages.each do |message| %>
					<li><%= message %></li>
				<% end %>
			</ul>
		</div>
	<% end %>

	<div class="field">
		<h4>Nome</h4>
		<%= f.text_field :name %>
	</div>

	<div class="field">
		<h4>Data de Nascimento</h4>
		<%= f.date_select :birthdate, {start_year: 1900, end_year: Time.now.year} %>
	</div>

	<div class="field">
		<h4>Impress√£o Digital</h4>
		<%= f.text_field :fingerprint %>
	</div>

	<div class="field">
		<h4>Estudante?</h4>
		<%= f.check_box :is_student %>
	</div>

	<div class="actions">
		<%= f.submit %>
	</div>
<% end %>
