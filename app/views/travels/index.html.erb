<p id="notice"><%= notice %></p>

<h1>Travels</h1>

<table>
	<thead>
		<tr>
			<th>Id</th>
			<th>Vehicle</th>
			<th>Card</th>
			<th>Condition</th>
			<th colspan="3"></th>
		</tr>
	</thead>

	<tbody>
		<% @travels.each do |travel| %>
			<tr>
				<td><%= travel.id %></td>
				<td><%= travel.vehicle.id %></td>
				<td><%= travel.card.id %></td>
				<td><%= travel.condition %></td>
				<td><%= link_to 'Show', travel %></td>
				<td><%= link_to 'Edit', edit_travel_path(travel) %></td>
				<td><%= link_to 'Destroy', travel, method: :delete, data: { confirm: 'Are you sure?' } %></td>
			</tr>
		<% end %>
	</tbody>
</table>

<br>

