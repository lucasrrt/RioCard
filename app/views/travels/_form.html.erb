<h3> Veículos disponíveis </h3>
<table border="1">
	<thead>
		<tr>
			<th>Id</th>
			<th>Tipo</th>
			<th>Linha</th>
			<th>Preço</th>
		</tr>
	</thead>

	<tbody>
		<% @vehicles.each do |vehicle| %>
			<tr>
				<td><%= vehicle.id %></td>
				<td><%= vehicle.kind %></td>
				<td><%= vehicle.line %></td>
				<td><%= vehicle.price %></td>
			</tr>
		<% end %>
	</tbody>
</table>
<%= link_to  "Novo veículo", new_vehicle_path %>

<h3> Cartões disponíveis </h3>
<table border="1">
	<thead>
		<tr>
			<th>Id</th>
			<th>Código do Cartão</th>
			<th>Usuário</th>
			<th>Saldo Disponível</th>
			<th colspan="3"></th>
		</tr>
	</thead>

	<tbody>
		<% @cards.each do |card| %>
			<tr>
				<td><%= card.id %></td>
				<td><%= card.code %></td>
				<td><%= card.user.name if card.user %></td>
				<td><%= card.balance %></td>
				<td><%= link_to  "Efetuar recarga", {controller: :recharges, action: :new, card_id: card.id} %></td>
				<td><%= link_to  "Editar Cartão", edit_card_path(card) %></td>
			</tr>
		<% end %>
	</tbody>
</table>
<%= link_to  "Novo cartão", new_card_path %>
<hr>

<%= form_for(travel) do |f| %>
	<% if travel.errors.any? %>
		<div id="error_explanation">
			<h2><%= pluralize(travel.errors.count, "error") %> prohibited this travel from being saved:</h2>

			<ul>
				<% travel.errors.full_messages.each do |message| %>
					<li><%= message %></li>
				<% end %>
			</ul>
		</div>
	<% end %>

	<div class="field">
		<%= f.label :vehicle_id %>
		<%= f.text_field :vehicle_id %>
	</div>

	<div class="field">
		<%= f.label :card_id %>
		<%= f.text_field :card_id %>
	</div>

	<div class="field">
		<label>Impressão Digital</label>
		<input id="fingerprint" name="fingerprint" type="text"></input>
	</div>

	<div class="actions">
		<%= f.submit %>
	</div>
<% end %>
