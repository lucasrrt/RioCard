<p id="notice"><%= notice %></p>

<h1>Veículos</h1>

<table border="1">
	<thead>
		<tr>
			<th>Id</th>
			<th>Tipo</th>
			<th>Linha</th>
			<th>Preço</th>
			<th colspan="3"></th>
		</tr>
	</thead>

	<tbody>
		<% @vehicles.each do |vehicle| %>
			<tr>
				<td><%= vehicle.id %></td>
				<td><%= vehicle.translated_name %></td>
				<td><%= vehicle.line %></td>
				<td><%= vehicle.price %></td>
				<td><%= link_to 'Show', vehicle %></td>
				<td><%= link_to 'Edit', edit_vehicle_path(vehicle) %></td>
				<td><%= link_to 'Destroy', vehicle, method: :delete, data: { confirm: 'Are you sure?' } %></td>
			</tr>
		<% end %>
	</tbody>
</table>

<br>

