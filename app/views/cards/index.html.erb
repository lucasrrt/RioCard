<p id="notice"><%= notice %></p>

<h1>Cartões</h1>

<table border="1">
	<thead>
		<tr>
			<th>Id</th>
			<th>Código</th>
			<th>Usuário</th>
			<th>Saldo</th>
			<th colspan="3"></th>
		</tr>
	</thead>

	<tbody>
		<% @cards.each do |card| %>
			<tr>
				<td><%= card.id %></td>
				<td><%= card.code %></td>
				<td><%= card.user_id %> <%= ("("+card.user.name+")") if card.user %></td>
				<td><%= card.balance %></td>
				<td><%= link_to 'Show', card %></td>
				<td><%= link_to 'Edit', edit_card_path(card) %></td>
				<td><%= link_to 'Destroy', card, method: :delete, data: { confirm: 'Are you sure?' } %></td>
			</tr>
		<% end %>
	</tbody>
</table>

<br>

<%= link_to 'Novo Cartão', new_card_path %> |
